extends layout

block head
  link(rel='stylesheet', href='/stylesheets/cover.css')
  
block content
  //- h1= title
  //- p Welcome to #{title}
  
  .site-wrapper
    .site-wrapper-inner
      .cover-container
        .masthead.clearfix
          .inner
            h3.masthead-brand Pizza Condor
            - var active = 'order'
            include ./menu.jade
        .inner.cover
          h1.cover-heading Realiza tu pedido
          
          form(method="POST", action="/order/submit")
            input(type="hidden", name='customer', value='#{user._id}')
            .form-group
              label(for='inputName') Nombre
              input#inputName.form-control(type='text', placeholder='Introduzca su nombre', name='name', value="#{user.username}", disabled='true')
            .form-group
              label(for='inputEmail') Email
              p.help-block Le enviaremos un email cuando su pedido esté listo
              input#inputEmail.form-control(type='email', placeholder='email@....', name='email', value='#{user.email}')
            .form-group
              label(for='inputPizza') Pizza
              p.help-block Elija entre nuestras deliciosas pizzas
              select#inputPizza.form-control(name='pizza')
                option Margarita
                option 4 Quesos
                option Barbacoa
            .checkbox
              label
                input(type='checkbox', name="email_on_ready")
                |  Enviar email cuando esté preparado
            button.btn.btn-lg.btn-default(type='submit') Enviar


          
          //- p.lead
            | Cover is a one-page template for building simple and beautiful home pages. Download, edit the text, and add your own fullscreen background photo to make it your own.
          //- p.lead
            a.btn.btn-lg.btn-default(href='#') Learn more
        .mastfoot
          .inner
            p
              | Web creada por 
              a(href='http://carloscondor.com') J.Carlos Delgado
              | .
