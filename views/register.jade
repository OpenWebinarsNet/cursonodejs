extends layout
  
block content
  //- h1= title
  //- p Welcome to #{title}
  
  .site-wrapper
    .site-wrapper-inner
      .cover-container
        .masthead.clearfix
          .inner
            h3.masthead-brand Pizza Condor
            - var active = 'login'
            include ./menu.jade
        .inner.cover
          if user
            h1.cover-heading
              | Ya has iniciado sesión como #{user}
          else
            h1.cover-heading Registrate
            
            form(method="POST", action="/user/register")
              .form-group
                label(for='inputUser') Usuario
                input#inputUser.form-control(type='text', placeholder='Introduzca un nombre de usuario', name='username')
              .form-group
                label(for='inputPassword') Contraseña
                input#inputPassword.form-control(type='password', placeholder='***', name='password')
              .form-group
                label(for='inputPassword2') Repite contraseña
                input#inputPassword2.form-control(type='password', placeholder='***', name='password2')
              .form-group
                label(for='inputEmail') Email
                input#inputEmail.form-control(type='email', placeholder='Introduzca su email', name='email')
              if validationErrors
                ul
                  each error in validationErrors
                    li #{error}

              button.btn.btn-lg.btn-default(type='submit') Resgistrar
 
          
          //- p.lead
            | Cover is a one-page template for building simple and beautiful home pages. Download, edit the text, and add your own fullscreen background photo to make it your own.
          //- p.lead
            a.btn.btn-lg.btn-default(href='#') Learn more
        include footer