  .site-wrapper
    .site-wrapper-inner
      .cover-container
        .masthead.clearfix
          .inner
            h3.masthead-brand Pizza Condor
            - var active = 'index'
            include ./menu.jade
        .inner.cover
          h1.cover-heading Gracias por realizar tu pedido
          h4 ID de pedido: #{order._id}
          h4 Usuario: #{order.customer.username}
          h4 Hora de pedido: #{order.order_date}
          h4 Pizza: #{order.pizza}
          h3 Estado del pedido: #{order.state}
          h4 Notificaci√≥n por email: 
            if order.email_on_ready
              | Si
            else
              | No
          
